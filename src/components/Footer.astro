---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { href: 'mailto:mher@mhermovsisyan.com', label: 'Email', icon: 'email' },
  { href: 'https://linkedin.com/in/mhermovsisyan', label: 'LinkedIn', icon: 'linkedin' },
  { href: 'https://github.com/mhermovsisyan', label: 'GitHub', icon: 'github' },
];
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <span class="logo-text">MM</span>
        </a>
        <p class="footer-tagline">
          Building the future with iOS & on-device AI
        </p>
      </div>
      
      <div class="footer-links">
        <div class="footer-nav">
          <h4>Navigation</h4>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/articles">Articles</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </div>
        
        <div class="footer-social">
          <h4>Connect</h4>
          <ul>
            {socialLinks.map(({ href, label }) => (
              <li>
                <a href={href} target={href.startsWith('mailto') ? undefined : '_blank'} rel="noopener noreferrer">
                  {label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} Mher Movsisyan. All rights reserved.</p>
      <p class="footer-location">Vancouver, Canada ðŸ‡¨ðŸ‡¦</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: var(--space-16) 0 var(--space-8);
    background: var(--color-bg-secondary);
    border-top: 1px solid var(--color-border);
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-10);
    margin-bottom: var(--space-10);
  }

  @media (min-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr auto;
    }
  }

  .footer-logo {
    display: inline-block;
    font-size: var(--text-2xl);
    font-weight: 700;
    margin-bottom: var(--space-3);
  }

  .logo-text {
    background: var(--gradient-accent);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .footer-tagline {
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    max-width: 280px;
  }

  .footer-links {
    display: flex;
    gap: var(--space-12);
  }

  .footer-nav h4,
  .footer-social h4 {
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
  }

  .footer-nav ul,
  .footer-social ul {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .footer-nav a,
  .footer-social a {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    transition: color var(--transition-base);
  }

  .footer-nav a:hover,
  .footer-social a:hover {
    color: var(--color-text-primary);
  }

  .footer-bottom {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-border);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .footer-location {
    font-size: var(--text-sm);
  }
</style>
