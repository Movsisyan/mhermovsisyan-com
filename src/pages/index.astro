<script>
  // Scroll Spy Implementation
  // Scroll Spy Implementation
  const observerOptions = {
    root: null,
    rootMargin: "-20% 0px -50% 0px",
    threshold: 0,
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      // If we are at the bottom of the page, let the scroll event handler handle it
      if (
        window.innerHeight + window.scrollY >=
        document.body.offsetHeight - 50
      )
        return;

      if (entry.isIntersecting) {
        document.querySelectorAll(".nav-item").forEach((item) => {
          item.classList.remove("active");
        });

        const id = entry.target.id;
        const activeNav = document.querySelector(`.nav-item[href="#${id}"]`);
        if (activeNav) {
          activeNav.classList.add("active");
        }
      }
    });
  }, observerOptions);

  document.querySelectorAll("section").forEach((section) => {
    observer.observe(section);
  });

  // Force "Contact" to be active when hitting the bottom of the page
  window.addEventListener("scroll", () => {
    if (
      window.innerHeight + window.scrollY >=
      document.body.offsetHeight - 50
    ) {
      document.querySelectorAll(".nav-item").forEach((item) => {
        item.classList.remove("active");
      });
      const contactNav = document.querySelector(`.nav-item[href="#comm"]`);
      if (contactNav) contactNav.classList.add("active");
    }
  });
</script>
