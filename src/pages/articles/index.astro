---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allArticles = await getCollection('articles', ({ data }) => !data.draft);
const sortedArticles = allArticles.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Writing â€” Mher Movsisyan">
  <!-- Floating Background Orbs -->
  <div class="bg-orbs">
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>
  </div>

  <main class="container" style="padding-top: 80px; min-height: 100vh;">
    <a href="/" class="back-link">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      Back
    </a>
    
    <header style="margin-bottom: 64px;">
      <span class="section-label">Ideas & Insights</span>
      <h1 class="section-title" style="font-size: clamp(2.5rem, 6vw, 4rem);">
        <span class="gradient">Writing</span>
      </h1>
      <p style="color: var(--color-text-secondary); font-size: 18px; max-width: 500px;">
        Thoughts on iOS development, algorithms, AI, and building great software.
      </p>
    </header>

    <div class="articles-list">
      {sortedArticles.map((article) => (
        <a href={`/articles/${article.slug}`} class="glass-card article-row">
          <div class="article-info">
            <span class="article-category">{article.data.category}</span>
            <h2 class="article-title">{article.data.title}</h2>
            <p class="article-desc">{article.data.description}</p>
          </div>
          <time class="article-date">
            {article.data.pubDate.toLocaleDateString('en-US', { 
              year: 'numeric', 
              month: 'short', 
              day: 'numeric' 
            })}
          </time>
        </a>
      ))}
    </div>
  </main>
</BaseLayout>

<style>
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: var(--color-text-muted);
    margin-bottom: 40px;
    transition: color 0.2s;
  }
  
  .back-link:hover {
    color: var(--color-neon-blue);
  }

  .articles-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding-bottom: 80px;
  }

  .article-row {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 24px;
    padding: 28px 32px;
    text-decoration: none;
    color: inherit;
  }

  .article-info {
    flex: 1;
  }

  .article-category {
    display: inline-block;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-neon-purple);
    margin-bottom: 8px;
  }

  .article-title {
    font-size: 20px;
    font-weight: 600;
    line-height: 1.3;
    margin-bottom: 8px;
  }

  .article-desc {
    font-size: 15px;
    color: var(--color-text-secondary);
    line-height: 1.5;
  }

  .article-date {
    font-size: 13px;
    color: var(--color-text-muted);
    white-space: nowrap;
    font-family: var(--font-mono);
  }

  @media (max-width: 640px) {
    .article-row {
      flex-direction: column;
      gap: 12px;
    }
  }
</style>
